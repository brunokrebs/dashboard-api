    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API Tests",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/api/node_modules/.bin/jest",
                "--config",
                "${workspaceRoot}/api/test/jest-e2e.json",
                "--runInBand",
                "--testTimeout=120000"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}/api",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Step 01",
            "program": "${workspaceFolder}/bin/src/01-migrate-products-from-bling.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Step 03",
            "program": "${workspaceFolder}/bin/src/03-link-images-to-products.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Step 04",
            "program": "${workspaceFolder}/bin/src/04-feed-product-inventory.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Step 05",
            "program": "${workspaceFolder}/bin/src/05-feed-product-category.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Step 06",
            "program": "${workspaceFolder}/bin/src/06-populate-compositions.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Step 07",
            "program": "${workspaceFolder}/bin/src/07-migrate-in-process-sales-orders.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Step 08",
            "program": "${workspaceFolder}/bin/src/08-migrate-old-sales-orders.js"
        }
    ]
}